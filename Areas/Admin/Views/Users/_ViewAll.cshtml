@model IEnumerable<E_commerce.Models.User>
    
 <div class="table-responsive text-nowrap">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th><strong>الرقم</strong></th>
                                <th>الاسم</th>
                                <th>المسمى الوظيفي</th>
                                <th>رقم الهاتف</th>
                                <th>العنوان</th>
                                <th>تاريخ الاضافة</th>
                                <th>حالة المستخدم</th>
                                <th>الإجراءات</th>
                            </tr>
                        </thead>
                        <tbody class="table-border-bottom-0">
                            @foreach (User user in Model)
                            {
                                <tr>
                                    <td><strong>@user.Id</strong></td>
                                    <td>@user.Name</td>
                                    <td>@user.Place.Name</td>
                                    <td>@user.Phone.Number</td>
                                    <td>@user.Address</td>
                                    <td>@user.CreatedAt</td>
                                    <td>@user.UserStatus.Name</td>
                                    <td>
                                        <div class="dropdown">
                                            <button type="button" class="btn dropdown-toggle hide-arrow p-0"
                                            data-bs-toggle="dropdown">
                                                <i class="bx bx-dots-vertical-rounded"></i>
                                            </button>
                                            <div class="dropdown-menu">
                                                <a class="dropdown-item" onclick="showInPopup('@Url.Action("CreateOrEdit","Users",new {id=@user.Id},Context.Request.Scheme)','تعديل المستخدم')">
                                                    <i class="bx bx-edit-alt me-1"></i>تعديل
                                                </a>
                                                <a class="dropdown-item" data-bs-toggle="modal"
                                                data-bs-target="#exampleModal">
                                                    <i class="bx bx-trash me-1"></i> حذف
                                                </a>
                                            </div>
                                        </div>
                                        <!-- Modal -->
                                    <div class="modal fade" id="exampleModal" tabindex="-1"
                                        aria-labelledby="exampleModalLabel" aria-hidden="true">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                        aria-label="Close"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        ...
                                                    </div>
                                                    <div class="modal-footer">
                                                        <a class="btn btn-light" data-bs-dismiss="modal">Close</a>
                                                        <a class="btn btn-danger" asp-action="Delete"
                                                        asp-route-id="@user.Id">Confirmation Delete</a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    @*<partial name="_pagination" model="@pagingInfo" />*@
                </div>