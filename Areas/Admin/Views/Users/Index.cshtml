@model IEnumerable<E_commerce.Models.User>

@{
    ViewData["Title"] = "Index";
    PagingInfo pagingInfo = new PagingInfo();
    int pageNo = 0;
    if (ViewBag.PagingInfo != null)
    {
        pagingInfo = ViewBag.PagingInfo;
        pageNo = pagingInfo.CurrentPage;
    }
}
<!-- Layout container -->
<div class="layout-page" dir="rtl">

    <!-- Content wrapper -->
    <div class="content-wrapper">
        <div class="container-xxl flex-grow-1 container-p-y">
            <h4>
                Users /
            </h4>
        </div>
        <div class="container-xxl flex-grow-1 container-p-y">

            <!-- Basic Bootstrap Table -->
            <div class="card">
                <div class="card-header border-bottom">
                    <h5 class="card-title">Search Filter</h5>
                </div>
                <div class="row p-2">
                        <div class="col-md-2 justify-content-end">
                            <div class="justify-content-end">
                                <button class="btn btn-primary" tabindex="0" aria-controls="DataTables_Table_0"
                                    type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasAddUser">
                                    <i class="bx bx-filter me-0 me-lg-2"></i>
                                    <span class="d-none d-lg-inline-block">الفلترة</span>
                                </button>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="d-flex w-px-150">
                                <label>Show</label>
                                <select name="DataTables_Table_0_length" aria-controls="DataTables_Table_0"
                                    class="form-select">
                                    <option value="7">7</option>
                                    <option value="10">10</option>
                                    <option value="25">25</option>
                                    <option value="50">50</option>
                                    <option value="75">75</option>
                                    <option value="100">100</option>
                                </select> <label>entries</label>
                            </div>
                        </div>
                        <div class="col-md-5">
                            <section class="w-100">
                                <div class="input-group mb-4">
                                    <input type="text" class="form-control" id="advanced-search-input"
                                        placeholder="phrase in:field1,field2" />
                                    <button class="btn btn-primary" id="advanced-search-button" type="button">
                                        <i class="fa fa-search"></i>
                                    </button>
                                </div>

                                <div id="datatable-advanced-search"></div>
                            </section>
                        </div>

                        <div class="col-md-3 justify-content-end">
                            <button type="button" data-bs-toggle="modal" class="btn btn-primary  d-block"
                                style="margin-right: auto !important;" data-bs-target="#addNewCCModal">
                                <i class="bx bx-plus me-0 me-lg-2"></i>
                                <span class="d-none d-lg-inline-block">إضافة مستخدم</span>
                            </button>
                        </div>
                        <!-- Add New User Modal -->
                        <div class="modal fade" id="addNewCCModal" tabindex="-1" aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered1 modal-simple modal-add-new-cc">
                                <div class="modal-content p-3 p-md-5">
                                    <div class="modal-body">
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"
                                            aria-label="Close"></button>
                                        <div class="text-center mb-4">
                                            <h3>إضافة مستخدم جديد</h3>
                                        </div>
                                        <form id="addNewCCForm" class="row g-3" onsubmit="return false">
                                            <div class="col-12">
                                                <label class="form-label w-100" for="modalAddCard">الاسم</label>
                                                <div class="input-group input-group-merge">
                                                    <input id="modalAddCard" name="modalAddCard" class="form-control"
                                                        type="text" placeholder="محمد أحمد عبد الله"
                                                        aria-describedby="modalAddCard2" />
                                                </div>
                                            </div>
                                            <div class="col-12">
                                                <label class="form-label w-100" for="modalAddCard">رقم الهاتف</label>
                                                <div class="input-group input-group-merge">
                                                    <input id="modalAddCard" name="modalAddCard" class="form-control"
                                                        type="number" placeholder="777-000-000"
                                                        aria-describedby="modalAddCard2" />
                                                </div>
                                            </div>
                                            <div class="col-12">
                                                <label class="form-label" for="modalPermission">الصلاحيات</label>
                                                <select id="modalPermission" name="modalPermission"
                                                    class="form-select" data-allow-clear="true">
                                                    <option value="">Select</option>
                                                    <option value="Australia">Australia</option>
                                                    <option value="Bangladesh">Bangladesh</option>
                                                    <option value="Belarus">Belarus</option>
                                                    <option value="Brazil">Brazil</option>
                                                </select>
                                            </div>

                                            <div class="col-12">
                                                <label class="form-label" for="modalPlace">المنطقة</label>
                                                <select id="modalPlace" name="modalPlace"
                                                    class="form-select" data-allow-clear="true">
                                                    <option value="">Select</option>
                                                    <option value="Australia">Australia</option>
                                                    <option value="Bangladesh">Bangladesh</option>
                                                    <option value="Belarus">Belarus</option>
                                                    <option value="Brazil">Brazil</option>
                                                </select>
                                            </div>
                                            <div class="col-12 text-center mt-4">
                                                <button type="submit" class="btn btn-primary me-1 me-sm-3">حفظ</button>
                                                <button type="reset" class="btn btn-label-secondary btn-reset"
                                                    data-bs-dismiss="modal" aria-label="Close">
                                                    الغاء
                                                </button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!--/ Add New User Modal -->
                    </div>
                <div class="card-datatable ">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th><strong>الرقم</strong></th>
                                <th>الاسم</th>
                                <th>المسم

                                    ى الوظيفي</th>
                                <th>الإجراءات</th>
                            </tr>
                        </thead>
                        <tbody class="table-border-bottom-0">
                            @foreach (User user in Model)
                            {
                                <tr>
                                    <td><strong>@user.Id</strong></td>
                                    <td>@user.Name</td>
                                    <td>@user.Place.Name</td>
                                    <td>
                                        <div class="dropdown">
                                            <button type="button" class="btn dropdown-toggle hide-arrow p-0"
                                            data-bs-toggle="dropdown">
                                                <i class="bx bx-dots-vertical-rounded"></i>
                                            </button>
                                            <div class="dropdown-menu">
                                                <a class="dropdown-item" href="javascript:void(0);"><i
                                                    class="bx bx-edit-alt me-1"></i>تعديل</a>
                                                <a class="dropdown-item" href="javascript:void(0);"><i
                                                    class="bx bx-trash me-1"></i> حذف</a>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <partial name="_pagination" model="@pagingInfo" />
            </div>
            <!--/ Basic Bootstrap Table -->
        </div>
    </div>
</div>
