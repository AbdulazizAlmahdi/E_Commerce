@model E_commerce.ViewModel.HelpViewModel

@{
    Layout = null;
}
<div class="row">
    <!-- Basic -->
    <div class="col-md-12">
        <form class="row g-3 needs-validation" asp-action="CreateAndEdit" asp-route-id="@Model.help.Id"
            onsubmit="return jQueryAjaxPost(this);">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="@Model.help.Id" name="id"/>
            <div class="form-group">
                <label class="form-label w-100" for="name-id" asp-for="@Model.help.Phone.Number"></label>
                <div class="input-group input-group-merge">
                    <input type="tel" asp-for="@Model.help.Phone.Number" class="form-control" />
                </div>
                <span asp-validation-for="@Model.help.Phone.Number" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="form-label w-100" for="name-id" asp-for="@Model.help.Subject"></label>
                <div class="input-group input-group-merge">
                    <input asp-for="@Model.help.Subject" class="form-control" />
                </div>
                <span asp-validation-for="@Model.help.Subject" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="form-label w-100" for="name-id" asp-for="@Model.help.Details"></label>
                <div class="input-group input-group-merge">
                    <textarea asp-for="@Model.help.Details" class="form-control" ></textarea>
                </div>
                <span asp-validation-for="@Model.help.Details" class="text-danger"></span>
            </div>
          
            <div class="form-group">
                <div class="d-grid gap-2">
                    <input type="submit" value="Submit" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
</div>
