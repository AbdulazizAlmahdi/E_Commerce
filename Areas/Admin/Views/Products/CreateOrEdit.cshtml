@model E_commerce.ViewModel.ProductsViewModel

@{
    Layout = null;
}
<script type="text/javascript">
    $.fn.select2.defaults.set("dropdownParent", $('#select'));
    $(document).ready(function () {
        $("#category-product").select2({
            ajax: {
                url: '/Admin/Products/GetCategory',
                dataType: 'json',
                delay: 250,
                data: function (params) {
                    return {
                        q: params.term, // search term
                        page: params.page
                    };
                },
                processResults: function (data, params) {
                    return {
                        results: $.map(data.items, function (item) {
                            console.log(item);

                            return {
                                id: item.id,
                                text: item.text,
                            };
                        }),
                    };
                },
                cache: true,
                onError: function (err) {
                    console.log(err);
                }
            },
            minimumInputLength: 1,
            placeholder: "حدد الصنف",
        });
    @* if ("@Model.user.Users" != "") {
        var newOption = new Option("@Model.user.Users?.Name", "@Model.user.Users?.Id", false, false);
        $('#childUsers').append(newOption).trigger('change');
        } *@
        });
</script>

