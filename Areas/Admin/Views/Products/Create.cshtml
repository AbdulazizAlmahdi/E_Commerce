@model Product
<!--نموذج اضافة منتج جديد -->
<form asp-action="Create" method="post" dir="rtl" style="padding-right:30px;">
    <div class="row g-2">
        <div class="card mb-4">
            <h5 class="card-header">اضافة منتج</h5>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="card-body">
                @*<label for="defaultFormControlInput" class="form-label">الصنف</label>
                    <input type="text" class="form-control" id="defaultFormControlInput" placeholder="خضروات-فواكة" aria-describedby="defaultFormControlHelp">
                    <div id="defaultFormControlHelp" class="form-text">*@
                <div class="col-md-6">

                    <div class="row">
                        <label for="defaultFormControlInput" class="control-label">الاسم</label>
                        <div class="col-sm-6">
                            <input asp-for="NameAr" type="text" class="form-control" id="defaultFormControlInput" placeholder="بطاط صعدي" aria-describedby="defaultFormControlHelp">
                            <span asp-validation-for="NameAr" class="text-danger"></span>
                            <label for="defaultFormControlInput" class="control-label"> الاسم بالانجليزي</label>
                            <input asp-for="NameEn" type="text" class="form-control" id="defaultFormControlInput" placeholder="بطاط صعدي" aria-describedby="defaultFormControlHelp">
                            <span asp-validation-for="NameEn" class="text-danger"></span>
                            <label for="defaultFormControlInput" class="control-label">التقرير</label>
                            <input asp-for="Report" type="text" class="form-control" id="defaultFormControlInput" placeholder="بطاط صعدي" aria-describedby="defaultFormControlHelp">
                            <span asp-validation-for="Report" class="text-danger"></span>
                            <label for="defaultFormControlInput" class="control-label">السعر</label>
                            <input asp-for="Price" type="text" class="form-control" id="defaultFormControlInput" placeholder="700000ر.ي" aria-describedby="defaultFormControlHelp">
                            <span asp-validation-for="Price" class="text-danger"></span>
                            <label for="defaultFormControlInput" class="control-label">التفاصيل</label>
                            <input asp-for="DetailsAr" type="text" class="form-control" id="defaultFormControlInput" placeholder="سلة بطاط عمراني" aria-describedby="defaultFormControlHelp">
                            <span asp-validation-for="DetailsAr" class="text-danger"></span>
                        </div>

                    </div>
                </div>
                
            </div>



                  
                <div class="row">
                    <div class="col-md-4 col-12">
                        <div class="form-group">
                            <label for="defaultFormControlInput" class="control-label">التفاصيل بالانجليزي</label>
                            <input asp-for="DetailsEn" type="text" class="form-control" id="defaultFormControlInput" placeholder="سلة بطاط عمراني" aria-describedby="defaultFormControlHelp">
                            <span asp-validation-for="DetailsEn" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="defaultFormControlInput" class="control-label">المدة</label>
                        <input asp-for="Duration" type="text" class="form-control" id="defaultFormControlInput" placeholder="5يوم" aria-describedby="defaultFormControlHelp">
                        <span asp-validation-for="Duration" class="text-danger"></span>
                    </div>
                    <div class="col-12">
                        <label for="defaultFormControlInput" class="control-label">الحالة</label>
                        <input asp-for="Status" type="text" class="form-control" id="defaultFormControlInput" placeholder="نشط" aria-describedby="defaultFormControlHelp">
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="defaultFormControlInput" class="control-label">الكمية</label>
                        <input asp-for="Quantity" type="text" class="form-control" id="defaultFormControlInput" placeholder="50" aria-describedby="defaultFormControlHelp">
                        <span asp-validation-for="Quantity" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="defaultFormControlInput" class="control-label">الوحدة</label>
                        <input asp-for="Unit" type="text" class="form-control" id="defaultFormControlInput" placeholder="سلة" aria-describedby="defaultFormControlHelp">
                        <span asp-validation-for="Unit" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label for="defaultFormControlInput" class="control-label">الخصم</label>
                    <input asp-for="Discount" type="text" class="form-control" id="defaultFormControlInput" placeholder="20%" aria-describedby="defaultFormControlHelp">
                    <span asp-validation-for="Discount" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="defaultFormControlInput" class="control-label">الصور</label>
                    <input asp-for="Image" type="text" class="form-control" id="defaultFormControlInput" placeholder="اضافة الصور      +" aria-describedby="defaultFormControlHelp">
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>
            </div>
            <div class="col-sm-12">
                <button type="submit" class="btn btn-primary data-submit me-1 me-sm-3">Create</button>
                <button asp-action="Index" class="btn btn-outline-secondary">Back</button>
            </div>
        </div>
    </div>
</form>
