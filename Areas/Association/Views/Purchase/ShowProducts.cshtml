@model IEnumerable<E_commerce.Models.PaymentItem>
@{
    Layout = null; 
}
<div class="table-responsive text-nowrap">
    <table id="purchase-datatable" class="table table-striped table-bordered dt-responsive nowrap" width="100%"
        cellspacing="0">
        <thead>
            <tr>
                <th><strong>الرقم</strong></th>
                <th>اسم المنتج</th>
                <th>سعر المنتج </th>
                <th>الكمية المطلوبة</th>
                <th>اجمالي السعر</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="@item.Id%2==0?odd:even">
                    <td class="sorting_1">@item.Id</td>
                    <td>@item.Product.NameAr</td>
                    <td>@item.Amount</td>
                    <td>@item.Quantity</td>                  
                    <td>@item.TotalPrice</td>                  
                </tr>
            }

        </tbody>
    </table>
</div>