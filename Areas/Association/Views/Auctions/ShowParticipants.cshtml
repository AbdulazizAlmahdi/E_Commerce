@model IEnumerable<AuctionsViewModel>
@{
    Layout = null;
}
<!-- Basic Bootstrap Table -->
<div class="table-responsive text-nowrap">
    <table id="auction-datatable" class="table table-striped table-bordered dt-responsive nowrap" width="100%"
        cellspacing="0">
        <thead>
            <tr>
                <th><strong>الرقم</strong></th>
                <th>اسم المشارك</th>
                <th>رقم الهاتف</th>
                <th>المبلغ</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="sorting_1"></td>
                    <td>@item.user.Name</td>
                    <td>@item.user.Phone.Number</td>
                    <td>@item.auctionUser.Amount</td>                  
                </tr>
            }

        </tbody>
    </table>
</div>
<!--/ Basic Bootstrap Table -->
