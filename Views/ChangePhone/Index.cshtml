<title>تغيير رقم الهاتف</title>

<div class="container mt-4 ">
    <div class="row">
        <div class="  col-sm-12 col-md-6 col-lg-6  mt-lg-5 pt-lg-2 ">
            <div class=" changepass  text-center m-auto mt-sm-0 mt-lg- m-md-0 ">
                <div class=" changepassTopDiv py-2  pe-2  p-sm-2  p-lg-2 p-md-1  ">
                    <h4 class="pt-1 pt-lg-2 pt-sm-2 pt-md-1 text-white fs-2 ">تغيير رقم الهاتف</h4>
                </div>  

                <br />
                <br />
                @if (ViewBag.Error != null)
                {
                <div style="color:red">
                    @ViewBag.Error
                </div>
                }

                @if (ViewBag.Success != null)
                {
                <h3 style="color:green">
                    @ViewBag.Success
                </h3>
                <script>
                        setInterval(function () { window.location.replace("/Check?phone="+@ViewBag.phone); }, 2000);
                </script>
                }

                <form class="  needs-validation  mt-5  mx-4 py-2" novalidate method="post" action="/changephone">



                    <input type="text" class="form-control my-2 my-sm-2 my-md-2 my-lg-3" placeholder="ادخل رقم الهاتف الجديد" id="validationCustom01" name="newPhone" value="" required>
                    @if (ViewBag.Errorphone != null)
                    {
                    <div style="color:red">
                        @ViewBag.Errorphone
                    </div>
                    }

                    <div class="   ">
                        <button class=" btnsubmit btn  fs-5 w-100 " type="submit">تغيير</button>
                    </div>
                    <div class="row py-2 py-lg-4 py-sm-2 py-md-2 ">



                    </div>
                </form>
            </div>

        </div>
        <div class="col-sm-12 col-md-6 col-lg-6 ">
            <div>
                <img src="../imgs/check.png" class=" img-fluid " alt="">
            </div>


        </div>

    </div>

</div>