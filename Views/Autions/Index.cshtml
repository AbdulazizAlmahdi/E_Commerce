@model IEnumerable<E_commerce.Models.Auction>
    <title> المزادات</title>


<div class="container-fluid Aution">
    <div class="DivAution container">
        <div class=" btn btnAution my-4  p-2  text-center">
            <h5 class=" pt-2 ">
                المزادات الفعالة
            </h5>

        </div>
        <div class="row  mypaginationindex" style="display: none;">

            @foreach (var item in Model)
            {

                <div class="col-sm-6 col-md-4  col-lg-4 data">
                    <a href="/DetailsAution?id=@item.Id" class="text-decoration-none">
                        <div class="card my-2">
                            <img src="~/uploads/@item.Product.ImagesProducts.First().ImageUrl" class=" img-fluid card-img-top" alt="tomato">
                            <div class="card-body">

                                <div class="row justify-content-center my-1">
                                    <div class="col">
                                        <h5 class="card-title">@Html.DisplayFor(modelItem => item.Product.NameAr)</h5>
                                    </div>
                                    <div class="col autionTime m-1 ">
                                        <p>
                                            يبدأ السعر من
                                            <br />
                                            <span>@Html.DisplayFor(modelItem => item.StartPrice) ريال</span>
                                        </p>
                                    </div>
                                </div>
                                <div class="row justify-content-center my-1">
                                    <div class="col ">
                                        <p class="pt-2">@Html.DisplayFor(modelItem => item.Product.Quantity) @Html.DisplayFor(modelItem => item.Product.Unit)</p>
                                    </div>
                                    <div class="col autionTime m-1">
                                        <p>
                                            <span>@Html.DisplayFor(modelItem => item.StartDate)</span>
                                            <br>
                                            <span>@Html.DisplayFor(modelItem => item.EndDate)</span>
                                        </p>
                                    </div>
                                </div>
                                <div class="row justify-content-center my-1">
                                    <div class="col">
                                        <p class="pt-2  ">
                                            <i class="fa-solid fa-location-dot me-2"></i>
                                            @Html.DisplayFor(modelItem => item.Product.Directorate.Governorate.Name) -
                                            @Html.DisplayFor(modelItem => item.Product.Directorate.Name) -
                                            @Html.DisplayFor(modelItem => item.Product.Address)
                                        </p>
                                    </div>
                                    <div class="col">
                                        <p class="pt-2">@Html.DisplayFor(modelItem => item.Product.Duration) ايام</p>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </a>

                </div>



            }
